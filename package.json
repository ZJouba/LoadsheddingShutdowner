{
  "name": "shedshield",
  "author": "Zack Joubert-Roux <zackjouba@gmail.com>",
  "version": "0.0.2-beta",
  "description": "An handy little tool to shut down your computer before loadshedding.",
  "main": "./.webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make win": "electron-forge make --arch ia32,x64 --targets @electron-forge/maker-squirrel,@electron-forge/maker-zip",
    "make lin": "electron-forge make --targets @electron-forge/maker-deb,@electron-forge/maker-rpm",
    "release": "electron-forge publish",
    "lint": "eslint . --ext js,ts,tsx",
    "test": "jest"
  },
  "keywords": [],
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.1",
    "@mui/material": "^5.14.2",
    "cron": "^2.4.0",
    "dayjs": "^1.11.9",
    "electron-router-dom": "^1.0.5",
    "electron-store": "^8.1.0",
    "node-fetch": "^3.3.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hot-loader": "4.13.1",
    "react-router-dom": "^6.14.2",
    "styled-components": "6.0.5",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@babel/core": "7.22.9",
    "@babel/plugin-transform-runtime": "7.22.9",
    "@babel/preset-env": "7.22.9",
    "@babel/preset-react": "7.22.5",
    "@babel/preset-typescript": "7.22.5",
    "@electron-forge/cli": "6.2.1",
    "@electron-forge/maker-deb": "6.2.1",
    "@electron-forge/maker-rpm": "6.2.1",
    "@electron-forge/maker-squirrel": "6.2.1",
    "@electron-forge/maker-zip": "6.2.1",
    "@electron-forge/plugin-webpack": "6.2.1",
    "@testing-library/jest-dom": "5.17.0",
    "@testing-library/react": "14.0.0",
    "@types/cron": "^2.0.1",
    "@types/electron-devtools-installer": "2.2.2",
    "@types/jest": "29.5.3",
    "@types/node-fetch": "^2.6.4",
    "@types/react": "^18.2.16",
    "@types/react-dom": "18.2.7",
    "@types/styled-components": "5.1.26",
    "@typescript-eslint/eslint-plugin": "6.2.0",
    "@typescript-eslint/parser": "6.2.0",
    "@vercel/webpack-asset-relocator-loader": "1.7.3",
    "babel-loader": "9.1.3",
    "cross-env": "7.0.3",
    "electron": "25.3.1",
    "eslint": "8.45.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.33.0",
    "file-loader": "^6.2.0",
    "jest": "29.6.1",
    "node-loader": "^2.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.0",
    "ts-jest": "29.1.1",
    "typescript": "5.1.6",
    "wait-on": "7.0.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "ShedShield",
        "executableName": "shedshield",
        "icon": "assets/icon",
        "extraResource": [
          "assets"
        ],
        "win32metadata": {
          "requested-execution-level": "requireAdministrator"
        }
      },
      "plugins": [
        {
          "name": "@electron-forge/plugin-webpack",
          "config": {
            "mainConfig": "./webpack/main.webpack.js",
            "renderer": {
              "config": "./webpack/renderer.webpack.js",
              "entryPoints": [
                {
                  "html": "./public/index.html",
                  "js": "./src/index.tsx",
                  "name": "main_window",
                  "preload": {
                    "js": "./electron/bridge.ts"
                  }
                }
              ]
            }
          }
        }
      ],
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "ShedShield"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
